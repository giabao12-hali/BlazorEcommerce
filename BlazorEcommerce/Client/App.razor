<CascadingAuthenticationState>
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(ShopLayout)">
            <NotAuthorized>
                @*<h3>You're not allowed to see this page.</h3>*@
                 <MudAlert Severity="Severity.Error">You're not allowed to see this page.</MudAlert>
                @*<h5>Please <a href="login">Login</a> or <a href="register">Register</a> for a new account.</h5>*@
                <MudAlert Severity="Severity.Info">
                    Please <a href="login">Login</a> or <a href="register">Register</a> for a new account.
                </MudAlert>
            </NotAuthorized>
            </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(ShopLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
